<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DOC_ContentDocumentLink__c</fullName>
    <description>Formula field that generates a direct link to the associated ContentDocument</description>
    <externalId>false</externalId>
    <formula>HYPERLINK(
  LEFT($Api.Partner_Server_URL_470, FIND('/services', $Api.Partner_Server_URL_470)) & '/' & DOC_ContentDocumentId__c,
  'Ver Documento'
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Content Document Link</label>
    <required>false</required>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
